@page
@using Microsoft.AspNetCore.Authorization
@using Wbc.Application.Common.Enums
@using Wbc.Application.Common.Helper
@using Wbc.WebUI.Services
@model Wbc.WebUI.Pages.ErrorModel
@inject IStringLocalizer<ErrorModel> Localizer
@inject CommonLocalizationService LocalizationService
@inject IAuthorizationService AuthorizationService
@{
    Layout = "_PlainLayout";

}




@section PageName
{
    @Localizer["PageName"]
}
@section ActivePage
    {
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">             
                <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("ErrorRes")</li>
            </ol>
        </nav>
    }


<!-- START 404 SECTION -->
<div class="banner_section full_screen banner_half_content">
    <div class="error_wrap">
        <div class="container">
            <div class="row align-items-center justify-content-between">
                <div class="col-lg-5 col-md-12 animation" data-animation="fadeInUp" data-animation-delay="0.2s">
                    <div class="single_img text-center mb-4 mb-lg-0">
                        <img src="assets/images/404_img.png" alt="404_img" />
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-0 col-md-10 offset-md-1 animation order-lg-first" data-animation="fadeInUp" data-animation-delay="0.3s">
                    <div class="text-center text-lg-left">
                        <div class="error_txt"> @Localizer["ErrorHeader"]</div>
                        <p> @Localizer["Error"]</p>
                        @*<p>The server encountered something unexpected that didn't allow it to complete the request.</p>*@
                       
                        <a href="/" class="btn btn-fill-out btn-radius">Back To Home</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="shape_wrap">
        <div class="shape18">
            <img src="assets/images/shape36.png" alt="shape36">
        </div>
        <div class="shape4">
            <div class="animation1">
                <img src="assets/images/shape5.png" alt="shape5">
            </div>
        </div>
        <div class="shape5">
            <div class="animation2">
                <img src="assets/images/shape6.png" alt="shape6">
            </div>
        </div>
        <div class="shape6">
            <div class="animation3">
                <img src="assets/images/shape7.png" alt="shape7">
            </div>
        </div>
        <div class="shape7">
            <div class="animation4">
                <img src="assets/images/shape8.png" alt="shape8">
            </div>
        </div>
        <div class="shape8">
            <div class="animation5">
                <img src="assets/images/shape9.png" alt="shape9">
            </div>
        </div>
    </div>
</div>
<!-- END 404 SECTION -->


