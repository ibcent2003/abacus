@page "{Id}"
@using Wbc.Application.Common.Enums
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.MenuResource.Pages.UpdateTopResourceModel
@inject IStringLocalizer<Pages.UpdateTopResourceModel> Localizer
@inject CommonLocalizationService LocalizationService
@{
}


@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section PageName
{
    @Localizer["PageName"]
}


@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Page("ListTopResource",new {area="MenuResource"})">@LocalizationService.Get("ListTopResourcesRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("UpdateTopResourceRes")</li>
        </ol>
    </nav>
}


<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Localizer["FormHeader"]</h5>
    </div>
    <div class="card-body">
        <form asp-page="UpdateTopResource" method="post">
            <div class="col-md-6">
                <input asp-for="UpdateCommand.Id" type="hidden"/>
                <div class="form-group">
                    <label class="col-form-label" asp-for="UpdateCommand.ResourceName"> @Localizer["RsourceNamelbl"] :</label>
                    <input class="form-control form-control-lg" asp-for="UpdateCommand.ResourceName"  />
                    <span class="text-danger" asp-validation-for="UpdateCommand.ResourceName"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="UpdateCommand.LocalizationKey"> @Localizer["LocalizationKeylbl"] :</label>
                    <input asp-for="UpdateCommand.LocalizationKey" class="form-control form-control-lg"  />
                    <span class="text-danger" asp-validation-for="UpdateCommand.LocalizationKey"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="UpdateCommand.Order"> @Localizer["Orderlbl"] :</label>
                    <input asp-for="UpdateCommand.Order" class="form-control form-control-lg"  min="1" />
                    <span class="text-danger" asp-validation-for="UpdateCommand.Order"></span>
                </div>
                <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Update" />
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}