@page "{Id}"
@using Wbc.Application.Common.Enums
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.MenuResource.Pages.DeleteResourceAreaModel
@inject IStringLocalizer<Pages.DeleteResourceAreaModel> Localizer
@inject CommonLocalizationService LocalizationService

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section PageName
{
    @Localizer["PageName"]
}


@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Page("ListResourceArea",new {area="MenuResource"})">@LocalizationService.Get("ListResourceAreasRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("DeleteResourceAreaRes")</li>
        </ol>
    </nav>
}


<div class="card">
    <div class="card-header">
        <h5 class="card-title"><p class="text-danger">@Localizer["DeleteConfirmationMessage"]</p></h5>
    </div>
    <div class="card-body">
        <form asp-page="DeleteResourceArea" method="post">
            <div class="col-md-6">
                <input asp-for="DeleteResourceAreaCommand.Id" type="hidden" />
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteResourceAreaCommand.ParentName"> @Localizer["ResourceHeaderlbl"] :</label>
                    <input class="form-control form-control-lg" asp-for="DeleteResourceAreaCommand.ParentName" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteResourceAreaCommand.AreaName"> @Localizer["ResourceNamelbl"] :</label>
                    <input class="form-control form-control-lg" readonly="readonly" asp-for="DeleteResourceAreaCommand.AreaName" />

                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteResourceAreaCommand.LocalizationKey"> @Localizer["LocalizationKeylbl"] :</label>
                    <input asp-for="DeleteResourceAreaCommand.LocalizationKey" readonly="readonly"  class="form-control form-control-lg" />

                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteResourceAreaCommand.Order"> @Localizer["Orderlbl"] :</label>
                    <input readonly="readonly" asp-for="DeleteResourceAreaCommand.Order" class="form-control form-control-lg"  min="1" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteResourceAreaCommand.IconUrl"> @Localizer["IconUrllbl"] :</label>
                    <input asp-for="DeleteResourceAreaCommand.IconUrl" readonly="readonly"  class="form-control form-control-lg" />
                  
                </div>
                <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Delete" />
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
