@page
@using Wbc.Application.Common.Enums
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.MenuResource.Pages.AddTopResourceModel
@inject IStringLocalizer<Pages.AddTopResourceModel> Localizer
@inject CommonLocalizationService LocalizationService

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section PageName
{
    @Localizer["PageName"]
}


@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Page("ListTopResource",new {area="MenuResource"})">@LocalizationService.Get("ListTopResourcesRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("AddTopResourceRes")</li>
        </ol>
    </nav>
}


    <div class="card">
        <div class="card-header">
            <h5 class="card-title">@Localizer["FormHeader"]</h5>
        </div>
        <div class="card-body">
            <form asp-page="AddTopResource" method="post">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="col-form-label" asp-for="CommandRequest.ResourceName"> @Localizer["RsourceNamelbl"] :</label>
                        <input class="form-control form-control-lg" asp-for="CommandRequest.ResourceName" placeholder="@Localizer["RsourceNamelbl"]" />
                        <span class="text-danger" asp-validation-for="CommandRequest.ResourceName"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="CommandRequest.LocalizationKey"> @Localizer["LocalizationKeylbl"] :</label>
                        <input asp-for="CommandRequest.LocalizationKey" class="form-control form-control-lg" placeholder="@Localizer["LocalizationKeylbl"]" />
                        <span class="text-danger" asp-validation-for="CommandRequest.LocalizationKey"></span>
                    </div>
                    <div class="form-group">
                        <label class="col-form-label" asp-for="CommandRequest.Order"> @Localizer["Orderlbl"] :</label>
                        <input asp-for="CommandRequest.Order" class="form-control form-control-lg" placeholder="@Localizer["Orderlbl"]" min="1" />
                        <span class="text-danger" asp-validation-for="CommandRequest.Order"></span>
                    </div>
                    <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Create" />
                </div>
            </form>
        </div>
    </div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
