@page "{Id}"
@using Wbc.Application.Common.Enums
@using Wbc.Application.Common.Interfaces
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.Permission.Pages.UpdateOrganisationApprovalRoleModel
@inject IStringLocalizer<Pages.UpdateOrganisationApprovalRoleModel> Localizer
@inject CommonLocalizationService LocalizationService
@inject ICurrentUserService UserService

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section PageName
{
    @Localizer["PageName"]
}

@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Page("ListOrganisationApprovalRole",new {area="Permission"})">@LocalizationService.Get("ListOrganisationApprovalRoleRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("UpdateOrganisationApprovalRoleRes")</li>
        </ol>
    </nav>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Localizer["FormHeader"]</h5>
    </div>
    <div class="card-body">
        <form asp-page="UpdtateOrganisationApprovalRole" method="post">
            <input type="hidden" asp-for="Command.Id" />
            <input type="hidden" asp-for="Command.SubscriberId"/>
            <input type="hidden" asp-for="Command.IsInternalUse"/>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.RoleName"> @Localizer["RoleNamelbl"] :</label>
                    <input required class="form-control form-control-lg" asp-for="Command.RoleName" />
                    <span class="text-danger" asp-validation-for="Command.RoleName"></span>
                </div>
                <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Update" />
            </div>
        </form>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}