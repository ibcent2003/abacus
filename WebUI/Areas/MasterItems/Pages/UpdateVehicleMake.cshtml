@page "{id}"
@using Microsoft.Extensions.Localization
@using Wbc.Application.Common.Enums
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.MasterItems.Pages.UpdateVehicleMakeModel
@inject IStringLocalizer<UpdateVehicleMakeModel> Localizer
@inject CommonLocalizationService LocalizationService


@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section PageName
{
    @Localizer["PageName"]
}


@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Page("ListVehicleMake",new {area="MasterItems"})">@LocalizationService.Get("ListVehicleMakeRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("UpdateVehicleMakeRes")</li>
        </ol>
    </nav>
}



<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Localizer["FormHeader"]</h5>
    </div>
    <div class="card-body">
        <form asp-page="UpdateCountry" method="post">
            <input type="hidden" asp-for="Command.Id" />
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.MakeName"> @Localizer["VehicleMakeNamelbl"] :</label>
                    <input class="form-control" asp-for="Command.MakeName" />
                    <span class="text-danger" asp-validation-for="Command.MakeName"></span>
                </div>
              

                <div class="form-group">
                    <div class="custom-control custom-switch">
                        <input type="checkbox" asp-for="Command.IsActive" class="custom-control-input" />
                        <label class="custom-control-label" asp-for="Command.IsActive"> @Localizer["IsActivelbl"]</label>
                    </div>

                </div>

                <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Update" />
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

