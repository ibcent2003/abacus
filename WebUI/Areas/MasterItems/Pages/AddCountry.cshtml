@page
@using Microsoft.Extensions.Localization
@using Wbc.Application.Common.Enums
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.MasterItems.Pages.AddCountryModel
@inject IStringLocalizer<AddCountryModel> Localizer
@inject CommonLocalizationService LocalizationService

@{ 
    ViewData["Title"] = Localizer["PageTitle"];
}

@section PageName
{
    @Localizer["PageName"]

}


@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Page("ListCountry",new {area="MasterItems"})">@LocalizationService.Get("ListCountryRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("AddCountryRes")</li>
        </ol>
    </nav>
}


<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Localizer["FormHeader"]</h5>
    </div>
    <div class="card-body">
        <form asp-page="AddCountry" method="post">
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.CountryName"> @Localizer["CountryNamelbl"] :</label>
                    <input class="form-control" asp-for="Command.CountryName" />
                    <span class="text-danger" asp-validation-for="Command.CountryName"></span>
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.CountryCode"> @Localizer["CountryCodelbl"] :</label>
                    <input asp-for="Command.CountryCode" class="form-control" />
                    <span class="text-danger" asp-validation-for="Command.CountryCode"></span>
                </div>

                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.CurrencyName"> @Localizer["CurrencyNamelbl"] :</label>
                    <input asp-for="Command.CurrencyName" class="form-control" />
                    <span class="text-danger" asp-validation-for="Command.CurrencyName"></span>
                </div>

                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.CurrencyCode"> @Localizer["CurrencyCodelbl"] :</label>
                    <input asp-for="Command.CurrencyCode" class="form-control" />
                    <span class="text-danger" asp-validation-for="Command.CurrencyCode"></span>
                </div>
                
                <div class="card-footer">
                    <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Create" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

