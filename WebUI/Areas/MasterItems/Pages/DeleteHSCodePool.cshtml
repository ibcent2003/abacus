@page "{Id}"
@using Wbc.Application.Common.Enums
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.MasterItems.Pages.DeleteHSCodePoolModel
@inject IStringLocalizer<Pages.DeleteHSCodePoolModel> Localizer
@inject CommonLocalizationService LocalizationService

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section PageName
{
    @Localizer["PageName"]
}


@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Page("ListHSCodePool",new {area="MasterItems"})">@LocalizationService.Get("ListHSCodePoolRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("DeleteHSCodePoolRes")</li>
        </ol>
    </nav>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title"><p class="text-danger">@Localizer["FormHeader"]</p></h5>
    </div>
    <div class="card-body">
        <form asp-page="DeleteResource" method="post">
            <div class="col-md-6">
                <input asp-for="DeleteHSCodePoolCommand.Id" type="hidden" />
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteHSCodePoolCommand.HSCode"> @Localizer["HSCodelbl"] :</label>
                    <input class="form-control form-control-lg" asp-for="DeleteHSCodePoolCommand.HSCode" readonly="readonly" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteHSCodePoolCommand.Heading"> @Localizer["Headinglbl"] :</label>
                    <input readonly="readonly" class="form-control form-control-lg" asp-for="DeleteHSCodePoolCommand.Heading" />

                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteHSCodePoolCommand.Description"> @Localizer["Descriptionlbl"] :</label>
                    <input readonly="readonly" asp-for="DeleteHSCodePoolCommand.Description" class="form-control form-control-lg" />

                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteHSCodePoolCommand.CountryName"> @Localizer["CountryIdlbl"] :</label>
                    <input asp-for="DeleteHSCodePoolCommand.CountryName" readonly="readonly" class="form-control form-control-lg" min="1" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="DeleteHSCodePoolCommand.StandardUnitOfQuantity"> @Localizer["StandardUnitOfQuantitylbl"] :</label>
                    <input asp-for="DeleteHSCodePoolCommand.StandardUnitOfQuantity" readonly="readonly" class="form-control form-control-lg" />
                </div>
                <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Delete" />
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}

