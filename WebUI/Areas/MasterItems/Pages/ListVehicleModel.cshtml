@page
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Wbc.Application.Common.Enums
@using Wbc.Application.Common.Helper
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.MasterItems.Pages.ListVehicleModelModel
@inject IStringLocalizer<ListVehicleModelModel> Localizer
@inject CommonLocalizationService LocalizationService
@inject IAuthorizationService AuthorizationService

@{
    <link href="~/lib/DataTables/datatables.css" rel="stylesheet" />
}

@{
    ViewData["Title"] = Localizer["PageTitle"];
    var canUpdate = await AuthorizationService.AuthorizeAsync(User, Policies.CanUpdateSubscriptionType.GetAttributeStringValue());
    var canDelete = await AuthorizationService.AuthorizeAsync(User, Policies.CanDeleteSubscriptionType.GetAttributeStringValue());
    var canAdd = await AuthorizationService.AuthorizeAsync(User, Policies.CanAddSubscriptionType.GetAttributeStringValue());


}

@section PageName
{
    @Localizer["PageName"]
}


@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("ListVehicleModelRes")</li>
        </ol>
    </nav>
}

@Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">
        @*@if (canAdd.Succeeded)
            {
                <a href="/MasterItems/AddSubscriptionType" class="btn btn-primary btn-lg"><span class="fa fa-plus"></span> Add New</a>
            }*@
        <a href="/MasterItems/AddVehicleModel" class="btn btn-primary btn-lg"><span class="fa fa-plus"></span> Add New</a>
    </div>
    <div class="card-body">
        <div class="table table-responsive">
            <table id="subscriptionType" class="table table-striped table-condensed" style="width: 100%">
                <thead>
                    <tr>
                        <th>
                            S/N
                        </th>
                        <th>
                            @Localizer["ModelNameColumn"]
                        </th>
                        <th>
                            @Localizer["MakeNameColumn"]
                        </th>

                        <th>@Localizer["IsActiveColumn"]</th>

                        <th></th>


                    </tr>
                </thead>

            </table>
        </div>
    </div>
</div>


@section Scripts
{
    <script src="~/lib/DataTables/datatables.js"></script>


    <script type="text/javascript">

        $(document).ready(function() {
            var canUpdate = @canUpdate.Succeeded.ToString().ToLower();
            var canDelete = @canDelete.Succeeded.ToString().ToLower();

            var deleteBtnlbl = '@LocalizationService.Get("DataTableDeleteBtnlbl")';
            var updateBtnlbl = '@LocalizationService.Get("DataTableUpdateBtnlbl")';
            var isActivelbl = '@LocalizationService.Get("IsActivelbl")';

            var columns = [
                { "data": "id", "orderable": false },
                { "data": "modelName", "orderable": true },
                { "data": "makeName", "orderable": true },
                {
                    "data": "isActive", "orderable": false,

                    "sClass": "text-center",
                    "render": function (data, type, row) {
                        if (data) {
                            return '<div class="custom-control custom-switch"><input type="checkbox" class="custom-control-input" checked="true"><label class="custom-control-label">Yes</label></div>';
                        }
                        else {
                            return '<div class="custom-control custom-switch"><input type="checkbox" class="custom-control-input"><label class="custom-control-label">NO</label></div>';
                        }
                    }

                }
            ];


                columns.push({
                    "data": "id",
                    "orderable": false,
                    "sClass": "text-center",
                    "render": function(data, type, row)
                    {
                        return '<a  href="/MasterItems/UpdateVehicleModel/' +
                            data +
                            '"><i class="text-success fas fa-edit"></i> ' +
                            updateBtnlbl +
                            ' </a>';
                    }
                });




            $('#subscriptionType').DataTable({
                "processing": true,
                "serverSide": true,
                responsive: true,
                "info": true,
                "stateSave": true,
                "lengthMenu":
                [
                    [10, 20, 50, -1], [10, 20, 50, "All"]
                ],
                "ajax": {
                    "url":
                        '/MasterItems/ListVehicleModel',
                    "type": "POST",
                    headers: {
                        RequestVerificationToken:
                            $('input:hidden[name="__RequestVerificationToken"]').val()
                    }
                },
                "fnRowCallback": function(nRow, aData, iDisplayIndex)
                {
                    $("td:first", nRow).html(iDisplayIndex + 1 + this.api().page.info().start);

                    return nRow;
                },
                "columns": columns,
                "order": [[1, "asc"]]
            });
        });

    </script>
}
