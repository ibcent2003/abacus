@page "{Id}"
@using Wbc.Application.Common.Enums
@using Wbc.WebUI.Services
@model Wbc.WebUI.Areas.MasterItems.Pages.DeleteProcessModel
@inject IStringLocalizer<Pages.DeleteProcessModel> Localizer
@inject CommonLocalizationService LocalizationService

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

@section PageName
{
    @Localizer["PageName"]
}


@section BreadCrumbs
{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Dashboard">@LocalizationService.Get("DashBoardRes")</a></li>
            <li class="breadcrumb-item"><a href="@Url.Page("ListProcess",new {area="MasterItems"})">@LocalizationService.Get("ListProcessRes")</a></li>
            <li class="breadcrumb-item active" aria-current="page">@LocalizationService.Get("DeleteProcessRes")</li>
        </ol>
    </nav>
}

<div class="card">
    <div class="card-header">
        <h5 class="card-title">@Localizer["FormHeader"]</h5>
    </div>
    <div class="card-body">
        <form asp-page="DeleteProcess" method="post">
            <input type="hidden" asp-for="Command.Id" />
            <div class="col-md-6">
                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.ProcessName"> @Localizer["ProcessNameColumn"] :</label>
                    <input readonly="readonly" class="form-control form-control-lg" asp-for="Command.ProcessName" placeholder="@Localizer["ProcessNameColumn"]" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.ProcessDescription"> @Localizer["ProcessDescriptionColumn"] :</label>
                    <input readonly="readonly" asp-for="Command.ProcessDescription" class="form-control form-control-lg" placeholder="@Localizer["processDescriptionColumn"]" />
                </div>
                <div class="form-group">
                    <label class="col-form-label" asp-for="Command.ProcessCode"> @Localizer["ProcessCodeColumn"] :</label>
                    <input readonly="readonly" asp-for="Command.ProcessCode" class="form-control form-control-lg" placeholder="@Localizer["ProcessCodeColumn"]" />
                </div>
                <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Delete" />
            </div>
        </form>
    </div>
</div>


@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
