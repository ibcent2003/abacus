                            <div class="form-group col-md-3">
                                @*<label for="inputEmail4">@Localizer["SelectListDefaultValueCountry"]</label>
        <input type="text" asp-for="Command.Year" class="form-control" placeholder="Cost eg. 10000">*@

                                <label>&nbsp;</label><br />
                                <partial name="_FormSubmissionButtonPartial" model="FormSubmissionAction.Calculate" />
