                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">@LocalizationService.Get("SelectListDefaultValueModel")</label>
                                <select class="custom-select form-control" asp-for="Command.ModelId">
                                    <option value="">@LocalizationService.Get("SelectListDefault")</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Command.ModelId"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">@LocalizationService.Get("SelectListDefaultValueVehicleType")</label>
                                <select class="custom-select form-control" asp-for="Command.VehicleTypeName">
                                    <option value="">@LocalizationService.Get("SelectListDefault")</option>
                                </select>
                                <span class="text-danger" asp-validation-for="Command.VehicleTypeName"></span>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>@LocalizationService.Get("SelectListDefaultValueFeatures")</label>
                                <select class="custom-select form-control" asp-for="Command.Features">
                                    <option value="">@LocalizationService.Get("SelectListDefault")</option>

                                </select>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <hr>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group col-md-3">
                                <label>@LocalizationService.Get("SelectListDefaultValueSeating")</label>
                                <select class="custom-select form-control" asp-for="Command.SeatingCapacity">
                                    <option value="">@LocalizationService.Get("SelectListDefault")</option>
                                    <option value="2">2</option>
                                    <option value="3">3</option>
                                    <option value="4">4</option>
                                    <option value="5">5</option>
                                    <option value="6">6</option>
                                    <option value="7">7</option>
                                    <option value="8">8</option>

                                </select>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">@Localizer["EngineCapacitylbl"]</label>
                                <input type="text" asp-for="Command.EngineCapacity" class="form-control" placeholder="eg. 1800">
                                <span class="text-danger" asp-validation-for="Command.EngineCapacity"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">@LocalizationService.Get("SelectListDefaultValueFuelType")</label>
                                <select class="custom-select form-control" asp-for="Command.FuelType">
                                    <option value="">@LocalizationService.Get("SelectListDefault")</option>
                                    <option value="Petrol">Petrol</option>
                                    <option value="Diesel">Diesel</option>
                                    <option value="Gas">Gas</option>
                                    <option value="Other">Other</option>

                                </select>
                            </div>
                            <div class="form-group col-lg-3">
                                <label>@LocalizationService.Get("SelectListDefaultValueCurrency")</label>
                                <select class="custom-select form-control" asp-for="Command.CurrencyId" asp-items="Model.Currencylist">
