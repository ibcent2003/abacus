                                <span class="text-danger" asp-validation-for="Command.Year"></span>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">@LocalizationService.Get("SelectListDefaultValueCountry")</label>

                                <select class="custom-select form-control" asp-for="Command.CountryId" asp-items="Model.CountryList">
