                <div class="col-md-12">
                    <div class="field_form">
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label>@LocalizationService.Get("SelectListDefaultValueMake")</label>
                                <select class="custom-select form-control" asp-for="Command.MakeId" asp-items="Model.MakeListdll">
                                    <option value="">@LocalizationService.Get("SelectListDefault")</option>
                                </select>
