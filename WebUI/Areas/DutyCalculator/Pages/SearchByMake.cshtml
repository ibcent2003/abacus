@section scripts{
    <partial name="_ValidationScriptsPartial" />
    <script type="text/javascript">
        $(function () {
            $("#Command_MakeId").on("change", function () {
                var makeId = $(this).val();
                $("#Command_ModelId").empty();
                $("#Command_ModelId").append("<option value=''>@LocalizationService.Get("SelectListDefaultValueModel")</option>");
                $.getJSON(`?handler=Models&MakeId=${makeId}`, (data) => {
                    $.each(data, function (i, item) {
                        $("#Command_ModelId").append(`<option value="${item.id}">${item.modelName}</option>`);
                    });
                });


                $("#Command_VehicleTypeName").empty();
                $("#Command_VehicleTypeName").append("<option value=''>@LocalizationService.Get("SelectListDefaultValueVehicleType")</option>");
                $.getJSON(`?handler=VehicleTypes&MakeId=${makeId}`, (v_data) => {
                    $.each(v_data, function (i, item) {
                        $("#Command_VehicleTypeName").append(`<option value="${item.name}">${item.name}</option>`);
                    });
                });


                $("#Command_Features").empty();
                $("#Command_Features").append("<option value=''>@LocalizationService.Get("SelectListDefaultValueFeatures")</option>");
                $.getJSON(`?handler=Features&MakeId=${makeId}`, (f_data) => {
                    $.each(f_data, function (i, item) {
                        $("#Command_Features").append(`<option value="${item.specialFeatureName}">${item.specialFeatureName}</option>`);
                    });
                });


            });
        });
    </script>
}